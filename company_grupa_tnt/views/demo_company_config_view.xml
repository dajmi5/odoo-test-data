<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_demo_company_config_settings" model="ir.ui.view">
            <field name="name">Demo company config settings</field>
            <field name="model">demo.company.settings</field>
            <field name="arch" type="xml">
                <form string="Demo setup and options" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                    </header>
                    <!--<group string="Company" groups="base.group_multi_company">-->
                       <div groups="base.group_multicompany">
                        <label for="company_id" />
                        <field name="company_id"
                                    options="{'no_create': True}"
                                    class="oe_inline"/>
                       </div>
                       <notebook>
                           <page string="Settings">
                                 <label name="start_label" string="Basic demo settings"/>
                           </page>
                       </notebook>
                        
                </form>
            </field>
    </record>
        
        <record id="action_demo_company_config" model="ir.actions.act_window">
            <field name="name">Configure Demo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">demo.company.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_demo_company_config" name="Demo Settings" parent="base.menu_users"
            sequence="99" action="action_demo_company_config" groups="base.group_system"/>
    </data>
</odoo>
